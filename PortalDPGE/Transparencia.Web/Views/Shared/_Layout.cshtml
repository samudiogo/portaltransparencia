<!DOCTYPE html>
<html>
<head>
    <style type="text/css">
        .fundo1 {
            background-color: #fff;
        }

        .fundo2 {
            background-color: black;
            color: #999;
        }
    </style>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Portal transparência</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.transparencia.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="https://use.fontawesome.com/5628438f36.js"></script>
    @RenderSection("head", false)
</head>
<body>

    @RenderPage("_acessibilidade.cshtml")

    <div id="menu"></div>
    @RenderPage("_MenuDinamico.cshtml")
    <div id="content">
        <div class="container body-content">
            @RenderBody()
            <a href="#content" hidden accesskey="1"></a>
            <a href="#menu" hidden accesskey="2"></a>
            <a href="#footer" hidden accesskey="3"></a>
        </div>
        <footer class="footer">
            <div id="footer" class="container">
                <div class="row align-items-center">
                    <div class="col-md-6 text-left text-white">
                        <p>
                            <a href="http://www.defensoria.rj.def.br" target="_blank" class="text-white">Defensoria Pública do Estado do Rio de Janeiro</a><br /> Atendimento ao Cidadão: 129<br /> (21) 2332-6224 (sede)<br /> Av. Marechal Câmara, 314 - CEP 20020-080 - Centro, RJ
                        </p>
                    </div>
                    <div class="visible-xs-inline-block col-xs-12 redes-sociais">
                        <hr />
                        <p class="text-white mb-0 visible-xs-block">
                            <span>Acompanhe a Defensoria: </span>
                            <a class="img-circle redes-icon" href="https://www.facebook.com/defensoriapublicadoriodejaneiro/">
                                <i class="fa fa-1x fa-facebook" style="padding: 5px 10px"></i>
                            </a>
                            <a class="img-circle redes-icon" href="https://www.flickr.com/photos/dpgerj/sets/">
                                <i class="fa fa-1x fa-flickr"></i>
                            </a>
                            <a class="img-circle redes-icon" href="https://www.youtube.com/channel/UCxfK8fA5D95ClVoK5D6oKHg">
                                <i class="fa fa-1x fa-youtube"></i>
                            </a>
                        </p>
                        <div class="clearfix"></div>

                    </div>
                    <div class="col-md-6 hidden-xs text-right redes-sociais">

                        <p class="text-white mb-0">
                            <span>Acompanhe a Defensoria: </span>
                            <a class="img-circle redes-icon" href="https://www.facebook.com/defensoriapublicadoriodejaneiro/">
                                <i class="fa fa-1x fa-facebook" style="padding: 5px 10px"></i>
                            </a>
                            <a class="img-circle redes-icon" href="https://www.flickr.com/photos/dpgerj/sets/">
                                <i class="fa fa-1x fa-flickr"></i>
                            </a>
                            <a class="img-circle redes-icon" href="https://www.youtube.com/channel/UCxfK8fA5D95ClVoK5D6oKHg">
                                <i class="fa fa-1x fa-youtube"></i>
                            </a>

                        </p>
                    </div>
                </div>
            </div>
        </footer>
        <script src="~/Scripts/jquery-3.1.1.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        @Html.Partial("~/Views/Shared/_DataTables.cshtml")

        @RenderSection("scripts", false)
    </div>
</body>
</html>
<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        var obj = document.getElementById('content');
        var style = window.sessionStorage.getItem('style');

        var size = window.sessionStorage.getItem('fonte');
        if (size != null) {
            $("#content").animate({ 'font-size': size + 'px' });
        }

        if (style == 'fundo2') {
            obj.className = 'fundo2';
        }
        else {
            obj.className = 'fundo1';
        }
    });
</script>