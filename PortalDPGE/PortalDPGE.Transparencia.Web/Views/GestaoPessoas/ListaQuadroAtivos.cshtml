@model IEnumerable<PortalDPGE.Transparencia.Web.Models.ServidorModel>
@{
    ViewBag.Title = "Gestão de Pessoas";
}

<h1 class="text-success">Gestão de Pessoas</h1>
<h2>Quadro de cargos - ativos</h2>

<hr />


<div class="form-group row">
    <label class="col-sm-2 control-label">Filtre por data:</label>
    <div class="col-md-4">
        <select class="form-control">
            <option>Mês/Ano</option>
            @foreach (var periodo in (IEnumerable<DateTime>) ViewBag.ListaPeriodo)
            {
                <option value="@periodo"> @periodo.ToString("MMMM/yyyy") </option>
            }
        </select>
    </div>
</div>
<h3>Exibindo dados referentes à: <span class="text-success">@ViewBag.Periodo</span> </h3>

<table class="table table-hover table-bordered table-striped">
    <thead class="thead-green">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Matricula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cargo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Funcao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lotacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nomeacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estavel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Antiguidade)
        </th>
    </tr>
    </thead>
    <tbody>
    @if (!Model.Any())
    {
        <h6>Não há registros disponíveis.</h6>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Matricula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cargo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Funcao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lotacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nomeacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estavel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Antiguidade)
                </td>
            </tr>
        }
    }
    </tbody>
</table>

<hr />
<p><em>última atualização: @Model.First().Periodo.ToString("F")</em></p>
<p><em>Responsável pelos dados: Gestão de Pessoas da DPRJ</em></p>